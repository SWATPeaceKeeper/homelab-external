{
  "groups": {
    "group:admin": ["robin@homelab"],
    "group:monitoring": ["hetzner-server@homelab"],
    "group:family": []
  },

  "tagOwners": {
    "tag:server": ["group:admin"],
    "tag:monitoring": ["group:admin"],
    "tag:client": ["group:admin"]
  },

  "hosts": {
    "homelab-network": "10.0.0.0/24",
    "nuc": "100.64.0.2",
    "hetzner": "100.64.0.1"
  },

  "acls": [
    {
      "action": "accept",
      "src": ["group:admin"],
      "dst": ["*:*"]
    },
    {
      "action": "accept",
      "src": ["group:monitoring"],
      "dst": [
        "homelab-network:22",
        "homelab-network:80",
        "homelab-network:443",
        "homelab-network:3000",
        "homelab-network:3100",
        "homelab-network:8080",
        "homelab-network:8123",
        "homelab-network:8428",
        "homelab-network:9090",
        "homelab-network:9093",
        "homelab-network:9100"
      ]
    },
    {
      "action": "accept",
      "src": ["*"],
      "dst": ["*:*"],
      "proto": "icmp"
    },
    {
      "action": "accept",
      "src": ["*"],
      "dst": ["nuc:22"]
    },
    {
      "action": "accept",
      "src": ["group:family"],
      "dst": [
        "homelab-network:8123",
        "homelab-network:80",
        "homelab-network:443"
      ]
    }
  ],

  "ssh": [
    {
      "action": "accept",
      "src": ["group:admin"],
      "dst": ["*"],
      "users": ["autogroup:nonroot", "root"]
    }
  ]
}
